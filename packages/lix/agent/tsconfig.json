{
	"extends": "@opral/tsconfig/default",
	"include": ["src/**/*"],
	"compilerOptions": {
		"isolatedDeclarations": true,
		"allowJs": false,
		"checkJs": false,
		"allowImportingTsExtensions": false,
		"emitDeclarationOnly": false,
		"verbatimModuleSyntax": true,
		"module": "Node16",
		"lib": ["ESNext", "DOM"],
		"outDir": "./dist",
		"rootDir": "./src"
	}
}
